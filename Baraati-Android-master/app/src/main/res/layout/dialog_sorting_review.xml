<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_3sdp"
        android:paddingTop="@dimen/_3sdp">

        <com.nectarbits.baraati.View.TextViewTitle
            android:id="@+id/txtHighToLow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:text="@string/str_recent_reviews"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/medium_Fonts_12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGraySelctor" />

        <com.nectarbits.baraati.View.TextViewTitle
            android:id="@+id/txtLowToHigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:text="@string/str_top_review"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/medium_Fonts_12" />



    </LinearLayout>

</RelativeLayout>