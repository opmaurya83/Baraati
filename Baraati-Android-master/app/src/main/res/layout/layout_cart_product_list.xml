<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/rplProduct"
            app:mrl_rippleColor="@color/colorRippleGray"
            app:mrl_rippleAlpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/llProduct"

                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:id="@+id/imgProductImage"
                    android:scaleType="centerCrop"
                    android:src="@drawable/splash"
                    android:layout_width="@dimen/_85sdp"
                    android:layout_height="@dimen/_75sdp"/>
                <LinearLayout
                    android:paddingTop="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <com.nectarbits.baraati.View.TextViewTitle
                        android:id="@+id/txtTitle"
                        android:text="Lorem Impsum"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/medium_Fonts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.nectarbits.baraati.View.TextViewDescription
                        android:id="@+id/txtDesc"

                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/colorDesciption"
                        android:textSize="@dimen/small_Fonts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/ivDelete"
                                android:src="@drawable/selector_delete_gray_red"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp" />



                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.nectarbits.baraati.View.TextViewDescription
                            android:gravity="center_vertical"
                            android:textColor="@color/colorDesciption"
                            android:text="@string/str_price"
                            android:textSize="@dimen/small_Fonts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.nectarbits.baraati.View.TextViewTitle
                            android:gravity="center_vertical"
                            android:id="@+id/txtPrice"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:textColor="@color/colorTitle"
                            android:text="$150"
                            android:textSize="@dimen/small_Fonts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
<View
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:paddingBottom="@dimen/_3sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:layout_gravity="right|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <com.nectarbits.baraati.View.TextViewTitle
                                android:id="@+id/ttvPlus"
                                android:text="+"
                                android:textStyle="bold"
                                android:textColor="@color/colorWhite"
                                android:background="@drawable/selector_gray_primary_c"

                                android:paddingLeft="@dimen/_4sdp"
                                android:paddingRight="@dimen/_4sdp"
                                android:textSize="@dimen/medium_Fonts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <com.nectarbits.baraati.View.TextViewTitle
                                android:id="@+id/ttvQuontity"
                                android:gravity="center"

                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:text="1"
                                android:background="@drawable/drawable_border"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                            <com.nectarbits.baraati.View.TextViewTitle
                                android:id="@+id/ttvminus"
                                android:text="-"
                                android:textStyle="bold"
                                android:textColor="@color/colorWhite"
                                android:background="@drawable/selector_gray_primary_c"

                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:textSize="@dimen/medium_Fonts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>