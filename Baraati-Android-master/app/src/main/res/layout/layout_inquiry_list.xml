<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/rplProduct"
            app:mrl_rippleColor="@color/colorRippleGray"
            app:mrl_rippleAlpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:id="@+id/llProduct"

                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:id="@+id/imgProductImage"
                    android:scaleType="centerCrop"
                    android:src="@drawable/splash"
                    android:layout_width="@dimen/_85sdp"
                    android:layout_height="@dimen/_80sdp" />
                <LinearLayout
                    android:paddingTop="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.nectarbits.baraati.View.TextViewTitle

                        android:id="@+id/txtTitle"
                        android:text="Lorem Impsum"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/medium_Fonts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.nectarbits.baraati.View.TextViewDescription
                        android:id="@+id/txtDesc"

                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/colorDesciption"
                        android:textSize="@dimen/small_Fonts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.nectarbits.baraati.View.TextViewDescription

                            android:gravity="center_vertical"
                            android:textColor="@color/colorDesciption"
                            android:text="@string/str_budget_inquiry_list"
                            android:textSize="@dimen/small_Fonts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.nectarbits.baraati.View.TextViewTitle
                            android:gravity="center_vertical"
                            android:id="@+id/txtPrice"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:textColor="@color/colorTitle"
                            android:text="$15"
                            android:textSize="@dimen/small_Fonts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/ll_Inquiry_by"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.nectarbits.baraati.View.TextViewDescription
                            android:gravity="center_vertical"
                            android:textColor="@color/colorDesciption"
                            android:text="@string/inquiry_by"
                            android:textSize="@dimen/small_Fonts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.nectarbits.baraati.View.TextViewTitle
                            android:gravity="center_vertical"
                            android:id="@+id/txt_inquiry_by"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:textColor="@color/colorTitle"
                            android:text="$15"
                            android:textSize="@dimen/small_Fonts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </LinearLayout>
                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_gravity="top"
                    app:mrl_rippleColor="@color/colorRippleGray"
                    app:mrl_rippleAlpha="0.2"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp">
                <ImageView

                    android:id="@+id/iv_message"
                    android:layout_gravity="top"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:src="@drawable/icon_inquiry_message"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp" />
                   <!--  <ImageView
                    android:id="@+id/iv_message"
                    android:tint="@color/orange"
                    android:layout_gravity="top"

                    android:layout_marginRight="@dimen/_7sdp"
                    app:srcCompat="@drawable/ic_volume_mute_black_24dp"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp" />-->
                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>