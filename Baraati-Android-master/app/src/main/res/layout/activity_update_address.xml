<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.nectarbits.baraati.UpdateAddress">
<include layout="@layout/layout_toolbar_normal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp">

            <com.nectarbits.baraati.View.EditTextTitle
                android:id="@+id/evName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTransparent"
                android:hint="@string/str_name"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/medium_Fonts_12" />
        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_7sdp">

            <com.nectarbits.baraati.View.EditTextTitle
                android:id="@+id/evPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTransparent"

                android:hint="@string/str_phone_number"
                android:inputType="number"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/colorDesciption"
                android:textSize="@dimen/medium_Fonts_12" />
        </android.support.v7.widget.CardView>






        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_7sdp">

            <com.nectarbits.baraati.View.EditTextTitle
                android:id="@+id/evAddress"
                android:layout_width="match_parent"

                android:layout_height="@dimen/_60sdp"
                android:background="@color/colorTransparent"
                android:gravity="top|left"

                android:hint="@string/str_address_1"
                android:maxLines="2"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/medium_Fonts_12" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_7sdp">

            <com.nectarbits.baraati.View.EditTextTitle
                android:id="@+id/evAddress2"
                android:layout_width="match_parent"

                android:layout_height="@dimen/_60sdp"
                android:background="@color/colorTransparent"
                android:gravity="top|left"

                android:hint="@string/str_address_2"
                android:maxLines="2"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/medium_Fonts_12" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_7sdp">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/colorRippleGray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.nectarbits.baraati.View.TextViewTitle
                        android:id="@+id/tvCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorTransparent"
                        android:gravity="top|left"
                        android:inputType="number"
                        android:maxLines="2"
                        android:padding="@dimen/_7sdp"
                        android:text="@string/str_country"
                        android:textColor="@color/colorDesciption"
                        android:textSize="@dimen/medium_Fonts_12" />


                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_7sdp">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/colorRippleGray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.nectarbits.baraati.View.TextViewTitle
                        android:id="@+id/tvState"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorTransparent"
                        android:gravity="top|left"
                        android:inputType="number"
                        android:maxLines="2"
                        android:padding="@dimen/_7sdp"
                        android:text="@string/str_state"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/medium_Fonts_12" />

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:rotation="180"
                        android:src="@drawable/icon_back_selected" />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_7sdp">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/colorRippleGray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.nectarbits.baraati.View.TextViewTitle
                        android:id="@+id/tvCity"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorTransparent"
                        android:gravity="top|left"
                        android:inputType="number"
                        android:maxLines="2"
                        android:padding="@dimen/_7sdp"
                        android:text="@string/str_city"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/medium_Fonts_12" />

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:rotation="180"
                        android:src="@drawable/icon_back_selected" />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_7sdp">

            <com.nectarbits.baraati.View.EditTextTitle
                android:id="@+id/evPinCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTransparent"

                android:hint="@string/str_zip"
                android:inputType="number"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/colorDesciption"
                android:textSize="@dimen/medium_Fonts_12" />
        </android.support.v7.widget.CardView>





    </LinearLayout>
</LinearLayout>
