    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginBottom="0.5dp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardPreventCornerOverlap="true">


        <TableRow

            android:id="@+id/tblRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/category_item_selector">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.github.siyamed.shapeimageview.CircularImageView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/img"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/icon_dem"
                    app:siBorderColor="@color/colorImageBorder"
                    app:siBorderWidth="2dp" />
                <View
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorHintGray"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.nectarbits.baraati.View.TextViewTitle

                        android:id="@+id/checkboxTextview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:text="Hindu"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/medium_Fonts_12" />

                    <com.nectarbits.baraati.View.TextViewDescription
                        android:id="@+id/txtDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:text="Engagement, Sangeet"
                        android:textColor="@color/colorDesciption"
                        android:textSize="@dimen/small_Fonts" />

                </LinearLayout>


                <CheckBox
                    android:padding="0dp"
                    android:id="@+id/checkbox"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/selector_checked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

