<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nectarbits.baraati.OrderDetailActivity">

    <include layout="@layout/layout_toolbar_normal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.nectarbits.baraati.View.TextViewTitle
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:text="@string/str_order_detail"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/medium_Fonts" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_3sdp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.nectarbits.baraati.View.TextViewTitle

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_order_date"
                            android:textColor="@color/colorDesciption"
                            android:textSize="@dimen/medium_Fonts_12" />

                        <com.nectarbits.baraati.View.TextViewTitle
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:text="@string/str_order_hash"
                            android:textColor="@color/colorDesciption"
                            android:textSize="@dimen/medium_Fonts_12" />

                        <com.nectarbits.baraati.View.TextViewTitle
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:text="@string/str_order_total"
                            android:textColor="@color/colorDesciption"
                            android:textSize="@dimen/medium_Fonts_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.nectarbits.baraati.View.TextViewTitle
                            android:id="@+id/tvtOrderDate"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitle"
                            android:textSize="@dimen/medium_Fonts_12" />

                        <com.nectarbits.baraati.View.TextViewTitle
                            android:id="@+id/tvtOrderNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="@dimen/_3sdp"
                            android:textColor="@color/colorTitle"
                            android:textSize="@dimen/medium_Fonts_12" />

                        <com.nectarbits.baraati.View.TextViewTitle
                            android:id="@+id/tvtOrderTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="@dimen/_3sdp"
                            android:textColor="@color/colorTitle"
                            android:textSize="@dimen/medium_Fonts_12" />
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <com.nectarbits.baraati.View.TextViewTitle
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:text="@string/str_order_product_details"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/medium_Fonts" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_3sdp">

                <LinearLayout
                    android:id="@+id/llProduct"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_1sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.nectarbits.baraati.View.TextViewDescription
                                    android:id="@+id/ttvStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:gravity="center_vertical"
                                    android:text="@string/str_delivery"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/small_Fonts" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.nectarbits.baraati.View.TextViewDescription
                                        android:id="@+id/ttvDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:gravity="center_vertical"
                                        android:text="@string/str_order_delivery_estimated"
                                        android:textColor="@color/colorDesciption"
                                        android:textSize="@dimen/small_Fonts" />

                                    <com.nectarbits.baraati.View.TextViewDescription
                                        android:id="@+id/tvdDeliveryDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:gravity="center_vertical"
                                        android:text="Tue,May 15th, 2016"
                                        android:textColor="@color/orange"
                                        android:textSize="@dimen/small_Fonts" />
                                </LinearLayout>

                                <com.nectarbits.baraati.View.TextViewTitle
                                    android:id="@+id/tvtTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Lorem Impsum"
                                    android:textColor="@color/colorTitle"
                                    android:textSize="@dimen/medium_Fonts_12" />

                                <com.nectarbits.baraati.View.TextViewDescription
                                    android:id="@+id/tvdDesciption"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                                    android:textColor="@color/colorDesciption"
                                    android:textSize="@dimen/small_Fonts" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:orientation="horizontal">

                                    <com.nectarbits.baraati.View.TextViewTitle
                                        android:id="@+id/tvtPrice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="123"
                                        android:textColor="@color/colorTitle"
                                        android:textSize="@dimen/medium_Fonts_12" />

                                    <com.nectarbits.baraati.View.TextViewTitle
                                        android:id="@+id/tvtQty"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:text="123213"
                                        android:textColor="@color/colorDesciption"
                                        android:textSize="@dimen/medium_Fonts_12" />
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgProductImage"
                        android:layout_width="@dimen/_85sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/splash" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <com.nectarbits.baraati.View.TextViewTitle
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:text="@string/str_order_payment_information"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/medium_Fonts" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_3sdp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.nectarbits.baraati.View.TextViewTitle

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_order_payment_method"
                            android:textColor="@color/colorDesciption"
                            android:textSize="@dimen/medium_Fonts_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.nectarbits.baraati.View.TextViewTitle
                            android:id="@+id/tvtOrderPaymentMethod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Credit Card"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/medium_Fonts_12" />

                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>


            <com.nectarbits.baraati.View.TextViewTitle
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:text="@string/str_order_shipping_information"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/medium_Fonts" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_3sdp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.nectarbits.baraati.View.TextViewTitle
                            android:id="@+id/tvtaddName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textColor="@color/colorTitle"
                            android:textSize="@dimen/medium_Fonts_12" />

                        <com.nectarbits.baraati.View.TextViewTitle
                            android:id="@+id/tvtadd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"

                            android:textColor="@color/colorDesciption"
                            android:textSize="@dimen/medium_Fonts_12" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.nectarbits.baraati.View.TextViewTitle
                                android:id="@+id/tvtState"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:textColor="@color/colorDesciption"
                                android:textSize="@dimen/medium_Fonts_12" />

                            <com.nectarbits.baraati.View.TextViewTitle
                                android:id="@+id/tvtCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"

                                android:textColor="@color/colorDesciption"
                                android:textSize="@dimen/medium_Fonts_12" />

                            <com.nectarbits.baraati.View.TextViewTitle
                                android:id="@+id/tvtZip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:textColor="@color/colorDesciption"
                                android:textSize="@dimen/medium_Fonts_12" />
                        </LinearLayout>

                        <com.nectarbits.baraati.View.TextViewTitle
                            android:id="@+id/tvtPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"

                            android:textColor="@color/colorDesciption"
                            android:textSize="@dimen/medium_Fonts_12" />
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>