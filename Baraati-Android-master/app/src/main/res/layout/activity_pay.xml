<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.nectarbits.baraati.PayActivity">
    <include layout="@layout/layout_toolbar_normal"/>
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/_7sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/_7sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.nectarbits.baraati.View.TextViewTitle
                android:layout_weight="1"
                android:text="@string/str_amount_payable"
                android:textColor="@color/colorDesciption"
                android:textSize="@dimen/medium_Fonts_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.nectarbits.baraati.View.TextViewTitle
                android:id="@+id/tvtGrandTotal"
                android:textColor="@color/colorTitle"
                android:text="\u20B91230"
                android:textSize="@dimen/medium_Fonts_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/_7sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:padding="@dimen/_7sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:inputType="number"
                android:background="#F5F5F5"
                android:layout_weight="1"
                android:padding="@dimen/_7sdp"
                android:hint="@string/str_credit_card_number"
                android:textColor="@color/colorDesciption"
                android:textSize="@dimen/medium_Fonts_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <LinearLayout

                android:gravity="center"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_margin="@dimen/_7sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.nectarbits.baraati.View.TextViewTitle
                        android:id="@+id/ttvMM"
                        android:gravity="center"
                        android:inputType="number"
                        android:background="#F5F5F5"
                        android:layout_weight="1"
                        android:padding="@dimen/_7sdp"
                        android:text="@string/str_mm"
                        android:textColor="@color/colorDesciption"
                        android:textSize="@dimen/medium_Fonts_12"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_margin="@dimen/_7sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.nectarbits.baraati.View.TextViewTitle
                        android:id="@+id/ttvYYYY"
                        android:gravity="center"
                        android:inputType="number"
                        android:background="#F5F5F5"
                        android:layout_weight="1"
                        android:padding="@dimen/_7sdp"
                        android:text="@string/str_YYYY"
                        android:textColor="@color/colorDesciption"
                        android:textSize="@dimen/medium_Fonts_12"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_margin="@dimen/_7sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:maxLength="3"
                        android:inputType="number"
                        android:background="#F5F5F5"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_7sdp"
                        android:hint="@string/str_CCV"
                        android:textColor="@color/colorDesciption"
                        android:textSize="@dimen/medium_Fonts_12"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_marginTop="@dimen/_10sdp"
                app:mrl_rippleBackground="@color/colorPrimary"
                app:mrl_rippleColor="@color/colorWhite"
                app:mrl_rippleAlpha="0.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.nectarbits.baraati.View.TextViewTitle
                android:id="@+id/ttvPay"
                android:gravity="center"
                android:textSize="@dimen/medium_Fonts"
                android:textColor="@color/colorWhite"
                android:text="@string/str_pay"
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </com.balysv.materialripple.MaterialRippleLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
