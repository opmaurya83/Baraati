<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/tblRow"
    android:background="@drawable/category_item_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



   <!-- <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginBottom="0.5dp"
        app:cardPreventCornerOverlap="true">-->
<LinearLayout

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_weight="1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <LinearLayout

                android:paddingLeft="@dimen/_2sdp"
                android:paddingRight="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingTop="@dimen/_4sdp"
                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.github.siyamed.shapeimageview.CircularImageView

                    android:id="@+id/img"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/icon_dem"
                    app:siBorderColor="@color/colorImageBorder"
                    app:siBorderWidth="2dp" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.nectarbits.baraati.View.TextViewTitle

                        android:id="@+id/checkboxTextview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lines="2"
                        android:layout_weight="1"
                        android:text="Hindu"
                        android:maxLines="2"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/small_Fonts" />

                </LinearLayout>





            </LinearLayout>
            <CheckBox
                android:layout_alignParentLeft="true"
                android:id="@+id/checkbox"

                android:layout_gravity="center_vertical"
                android:button="@drawable/selector_checked"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp" />


        </RelativeLayout>
    <View
        android:id="@+id/vleftDivider"
        android:layout_centerInParent="true"
        android:background="@color/colorHintGray"
        android:layout_width="0.3dp"
        android:layout_height="match_parent"/>
</LinearLayout>
<!--    </android.support.v7.widget.CardView>-->
    <View
        android:background="@color/colorHintGray"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>

</LinearLayout>