<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_message_relativelayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/chat_attach_width"
    android:layout_height="@dimen/chat_attach_height"
    android:orientation="horizontal"
    android:padding="5dp"
    android:visibility="gone">

    <com.nectarbits.baraati.Chat.ui.views.maskedimageview.MaskedImageView
        android:id="@+id/product_imageview"
        android:layout_width="@dimen/chat_attach_width"
        android:layout_height="@dimen/chat_attach_height"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:mask="@drawable/left_bubble"
        android:src="@null" />

    <TextView
        android:id="@+id/time_product_message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_margin="10dp"
        android:background="@drawable/badge_attach_message_time"
        android:textColor="@color/black"
        android:alpha="0.5"
        android:padding="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:alpha="0.5"
        android:background="@drawable/badge_attach_message_time"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/product_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:textColor="@color/black" />


    </LinearLayout>

</FrameLayout>