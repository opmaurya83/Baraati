    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardPreventCornerOverlap="true">
        <com.balysv.materialripple.MaterialRippleLayout
            app:mrl_rippleBackground="@color/colorPrimary"
            app:mrl_rippleColor="@color/colorWhite"
            app:mrl_rippleAlpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow

            android:id="@+id/tblRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.github.siyamed.shapeimageview.CircularImageView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/img"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/icon_dem"
                    app:siBorderColor="@color/colorImageBorder"
                    app:siBorderWidth="2dp" />
                <View
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.nectarbits.baraati.View.TextViewTitle
                        android:id="@+id/textViewMainCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hindu"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/medium_Fonts" />



                </LinearLayout>

                <ImageView
                    android:clickable="true"
                    android:id="@+id/btnPlus"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/selector_plus_white_gray"/>

                <ImageView
                    android:clickable="true"
                    android:id="@+id/btnDelete"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/selector_delete_white_grey"/>

                <ImageView

                    android:id="@+id/btnRighArrow"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/down_arrow_red"/>

