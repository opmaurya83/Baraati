<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardPreventCornerOverlap="true">
        <com.balysv.materialripple.MaterialRippleLayout
            app:mrl_rippleColor="@color/colorRippleGray"
            app:mrl_rippleAlpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow

            android:id="@+id/tblRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="@dimen/_8sdp">

            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/imgCategory"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:src="@drawable/icon_dem"
                app:siBorderColor="@color/colorImageBorder"
                app:siBorderWidth="@dimen/_2sdp" />


    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorHintGray"></View>
            <LinearLayout
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.nectarbits.baraati.View.TextViewTitle
                    android:id="@+id/textViewMainCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Hindu "
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/large_Fonts" />

                <com.nectarbits.baraati.View.TextViewDescription
                    android:id="@+id/txtDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Engagement, Sangeet, \nCocktail, Mahendi, Wedding"
                    android:textColor="@color/colorDesciption"
                    android:textSize="@dimen/small_Fonts" />

            </LinearLayout>
    </LinearLayout>
            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/down_arrow" />
            </LinearLayout>
        </TableRow>
        </com.balysv.materialripple.MaterialRippleLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>