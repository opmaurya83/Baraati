    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardPreventCornerOverlap="true">


        <com.balysv.materialripple.MaterialRippleLayout
            app:mrl_rippleColor="@color/colorRippleGray"
            app:mrl_rippleAlpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow
            android:id="@+id/tblRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.github.siyamed.shapeimageview.CircularImageView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/img"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/icon_dem"
                    app:siBorderColor="@color/colorImageBorder"
                    app:siBorderWidth="2dp" />
                <View
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorHintGray"></View>
                <LinearLayout
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.nectarbits.baraati.View.TextViewTitle
                        android:id="@+id/textViewMainCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:layout_weight="1"
                        android:text="Hindu"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/large_Fonts" />

                    <com.nectarbits.baraati.View.TextViewDescription
                        android:id="@+id/txtSucategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/small_Fonts" />

                    <com.nectarbits.baraati.View.TextViewDescription
                        android:id="@+id/txtDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:text="Engagement, Sangeet"
                        android:textColor="@color/colorDesciption"
                        android:textSize="@dimen/small_Fonts" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/btnRighArrow"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@drawable/down_arrow"/>
                <!--    <CheckedTextView
                        android:clickable="true"
                        android:id="@+id/checkboxTextview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Punjabi"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/small_Fonts"
                        android:gravity="center_vertical"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:drawableRight="@drawable/selector_checked"/>-->
            </LinearLayout>
        </TableRow>
        </com.balysv.materialripple.MaterialRippleLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>