<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar_normal" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
   <LinearLayout

       android:background="@color/colorWhite"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:padding="@dimen/_7sdp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
        <com.nectarbits.baraati.View.TextViewTitle
            android:textSize="@dimen/medium_Fonts_12"
            android:text="@string/str_customer_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
       <com.hedgehog.ratingbar.RatingBar
           android:layout_marginTop="@dimen/_3sdp"
           android:id="@+id/ratingbar"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:starEmpty="@drawable/icon_star_empty"
           app:starFill="@drawable/icon_star_fill"
           app:clickable="true"
           app:halfstart="true"
           app:starImagePadding="0dp"
           app:starCount="5"
           app:starImageHeight="@dimen/_12sdp"
           app:starImageWidth="@dimen/_12sdp" />

       <com.nectarbits.baraati.View.TextViewDescription
           android:layout_marginTop="@dimen/_3sdp"
           android:textColor="@color/colorTitle"
           android:text="0 out of 5 star"
           android:textSize="@dimen/small_Fonts"
           android:layout_width="match_parent"
           android:id="@+id/txtAverageRatting"
           android:layout_height="wrap_content" />
       </LinearLayout>
       <View
           android:background="#FAE9EE"
           android:layout_width="match_parent"
           android:layout_height="0.5dp"/>

       <LinearLayout
            android:orientation="vertical"
           android:padding="@dimen/_7sdp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TableRow
               android:gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >
               <com.nectarbits.baraati.View.TextViewDescription
                   android:textColor="@color/colorTitle"
                   android:text="@string/str_5_stars"
                   android:textSize="@dimen/small_Fonts"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ProgressBar
                   android:id="@+id/pb_5"
                   style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                   android:layout_width="@dimen/_190sdp"
                   android:progressDrawable="@drawable/drawable_progress"
                   android:layout_height="@dimen/_20sdp"
                   android:layout_marginLeft="@dimen/_7sdp"
                   android:max="100"
                   android:progress="25"
                   android:progressTint="#C5C5C5" />
               <com.nectarbits.baraati.View.TextViewDescription
                   android:id="@+id/pb_5_total"
                   android:layout_marginLeft="@dimen/_7sdp"
                   android:textColor="@color/colorTitle"
                   android:text="0"
                   android:textSize="@dimen/small_Fonts"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </TableRow>

           <TableRow
               android:layout_marginTop="@dimen/_5sdp"
               android:gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >
               <com.nectarbits.baraati.View.TextViewDescription
                   android:textColor="@color/colorTitle"
                   android:text="@string/str_4_stars"
                   android:textSize="@dimen/small_Fonts"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ProgressBar
                   android:id="@+id/pb_4"
                   style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                   android:layout_width="@dimen/_190sdp"
                   android:progressDrawable="@drawable/drawable_progress"
                   android:layout_height="@dimen/_20sdp"
                   android:layout_marginLeft="@dimen/_7sdp"
                   android:max="100"
                   android:progress="0"
                   android:progressTint="#C5C5C5" />
               <com.nectarbits.baraati.View.TextViewDescription
                   android:id="@+id/pb_4_total"
                   android:layout_marginLeft="@dimen/_7sdp"
                   android:textColor="@color/colorTitle"
                   android:text="0"
                   android:textSize="@dimen/small_Fonts"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </TableRow>

           <TableRow
               android:layout_marginTop="@dimen/_5sdp"
               android:gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >
               <com.nectarbits.baraati.View.TextViewDescription
                   android:textColor="@color/colorTitle"
                   android:text="@string/str_3_stars"
                   android:textSize="@dimen/small_Fonts"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ProgressBar
                   android:id="@+id/pb_3"
                   style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                   android:layout_width="@dimen/_190sdp"
                   android:progressDrawable="@drawable/drawable_progress"
                   android:layout_height="@dimen/_20sdp"
                   android:layout_marginLeft="@dimen/_7sdp"
                   android:max="100"
                   android:progress="0"
                   android:progressTint="#C5C5C5" />
               <com.nectarbits.baraati.View.TextViewDescription
                   android:id="@+id/pb_3_total"
                   android:layout_marginLeft="@dimen/_7sdp"
                   android:textColor="@color/colorTitle"
                   android:text="0"
                   android:textSize="@dimen/small_Fonts"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </TableRow>
           <TableRow
               android:layout_marginTop="@dimen/_5sdp"
               android:gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >
               <com.nectarbits.baraati.View.TextViewDescription
                   android:textColor="@color/colorTitle"
                   android:text="@string/str_2_stars"
                   android:textSize="@dimen/small_Fonts"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ProgressBar
                   android:id="@+id/pb_2"
                   style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                   android:layout_width="@dimen/_190sdp"
                   android:progressDrawable="@drawable/drawable_progress"
                   android:layout_height="@dimen/_20sdp"
                   android:layout_marginLeft="@dimen/_7sdp"
                   android:max="100"
                   android:progress="0"
                   android:progressTint="#C5C5C5" />
               <com.nectarbits.baraati.View.TextViewDescription
                   android:id="@+id/pb_2_total"
                   android:layout_marginLeft="@dimen/_7sdp"
                   android:textColor="@color/colorTitle"
                   android:text="0"
                   android:textSize="@dimen/small_Fonts"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </TableRow>
           <TableRow
               android:layout_marginTop="@dimen/_5sdp"
               android:gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >
               <com.nectarbits.baraati.View.TextViewDescription
                   android:textColor="@color/colorTitle"
                   android:text="@string/str_1_stars"
                   android:textSize="@dimen/small_Fonts"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ProgressBar
                   android:id="@+id/pb_1"
                   style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                   android:layout_width="@dimen/_190sdp"
                   android:progressDrawable="@drawable/drawable_progress"
                   android:layout_height="@dimen/_20sdp"
                   android:layout_marginLeft="@dimen/_7sdp"
                   android:max="100"
                   android:progress="0"
                   android:progressTint="#C5C5C5" />
               <com.nectarbits.baraati.View.TextViewDescription
                   android:id="@+id/pb_1_total"
                   android:layout_marginLeft="@dimen/_7sdp"
                   android:textColor="@color/colorTitle"
                   android:text="0"
                   android:textSize="@dimen/small_Fonts"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </TableRow>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
           <android.support.v7.widget.CardView

               app:cardBackgroundColor="@color/colorPrimary"
               app:cardPreventCornerOverlap="false"
               app:cardCornerRadius="@dimen/_4sdp"
               android:layout_width="@dimen/_120sdp"
               android:layout_height="wrap_content">
               <com.balysv.materialripple.MaterialRippleLayout
                   app:mrl_rippleColor="@color/colorWhite"
                   app:mrl_rippleAlpha="0.2"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
               <LinearLayout
                   android:id="@+id/llSortReview"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   android:padding="@dimen/_5sdp"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <com.nectarbits.baraati.View.TextViewTitle
                       android:id="@+id/tvtreviewspn"
                       android:textColor="@color/colorWhite"
                       android:text="@string/str_recent_reviews"
                       android:textSize="@dimen/medium_Fonts_12"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <ImageView
                       android:layout_marginLeft="@dimen/_7sdp"
                       android:src="@drawable/icon_arrow_down_white"
                       android:layout_width="@dimen/_12sdp"
                       android:layout_height="@dimen/_12sdp" />
               </LinearLayout>
               </com.balysv.materialripple.MaterialRippleLayout>
           </android.support.v7.widget.CardView>
            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
                <android.support.v7.widget.CardView


                    app:cardBackgroundColor="#C5C5C5"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.balysv.materialripple.MaterialRippleLayout
                        app:mrl_rippleColor="@color/colorWhite"
                        app:mrl_rippleAlpha="0.2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/llWriteReview"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_25sdp"
                            android:paddingRight="@dimen/_25sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <com.nectarbits.baraati.View.TextViewTitle
                                android:textColor="#4B4949"
                                android:text="@string/str_write_review"
                                android:textSize="@dimen/medium_Fonts_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
       </LinearLayout>

   </LinearLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   <android.support.v7.widget.RecyclerView

       android:id="@+id/rcReviews"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </android.support.v7.widget.RecyclerView>
<include layout="@layout/layout_empty_text"/>
    </RelativeLayout>
</LinearLayout>
