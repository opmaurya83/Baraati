<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EventDateActivity">

    <include layout="@layout/layout_toolbar_normal" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_7sdp"
        app:cardCornerRadius="@dimen/_2sdp"

        app:cardPreventCornerOverlap="true">
        <com.balysv.materialripple.MaterialRippleLayout
            app:mrl_rippleColor="@color/colorRippleGray"
            app:mrl_rippleAlpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow
            android:id="@+id/tblRowDateRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/category_item_selector">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"

                android:padding="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.nectarbits.baraati.View.TextViewTitle

                            android:id="@+id/txtSetDates"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/str_set_dates"
                            android:textColor="@color/colorTitle"
                            android:textSize="@dimen/large_Fonts"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <com.nectarbits.baraati.View.TextViewDescription
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"

                                android:text="@string/str_from"
                                android:textColor="@color/colorDesciption"
                                android:textSize="@dimen/medium_Fonts" />

                            <com.nectarbits.baraati.View.TextViewDescription
                                android:id="@+id/txtFrom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/medium_Fonts" />

                            <com.nectarbits.baraati.View.TextViewDescription

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"

                                android:text="@string/str_to"
                                android:textColor="@color/colorDesciption"
                                android:textSize="@dimen/medium_Fonts" />

                            <com.nectarbits.baraati.View.TextViewDescription
                                android:id="@+id/txtTo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_weight="1"

                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/medium_Fonts" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:background="@drawable/down_arrow" />
                </LinearLayout>


            </LinearLayout>
        </TableRow>
        </com.balysv.materialripple.MaterialRippleLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_2sdp"

        app:cardPreventCornerOverlap="true">
        <com.balysv.materialripple.MaterialRippleLayout
            app:mrl_rippleColor="@color/colorRippleGray"
            app:mrl_rippleAlpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow
            android:id="@+id/tblRowReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/category_item_selector">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:orientation="horizontal"

                android:padding="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.nectarbits.baraati.View.TextViewTitle
                            android:id="@+id/txtSetReminder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/str_set_reminder"
                            android:textColor="@color/colorTitle"
                            android:textSize="@dimen/large_Fonts"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <com.nectarbits.baraati.View.TextViewDescription
                                android:id="@+id/txtRemindmeBefore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"

                                android:textColor="@color/colorDesciption"
                                android:textSize="@dimen/medium_Fonts" />

                        </LinearLayout>
                    </LinearLayout>


                    <ImageView
                        android:visibility="gone"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:background="@drawable/down_arrow" />
                </LinearLayout>


            </LinearLayout>
            </TableRow>
            </com.balysv.materialripple.MaterialRippleLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardPreventCornerOverlap="true">

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/colorRippleGray">

            <TextView
                android:id="@+id/btnDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_7sdp"
                android:text="@string/str_done"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/large_Fonts" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </android.support.v7.widget.CardView>





    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardBackgroundColor="@color/primary"
        app:cardPreventCornerOverlap="true">

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/colorPrimary">

            <TextView

                android:background="@color/colorPrimary"
                android:id="@+id/btnplus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/_7sdp"
                android:text="@string/str_share_resposibilities"
                android:textColor="@color/white"
                android:textSize="@dimen/large_Fonts" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardBackgroundColor="@color/primary"
        app:cardPreventCornerOverlap="true">
        <FrameLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_responsible_members"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp">

            </android.support.v7.widget.RecyclerView>
            <include layout="@layout/layout_empty_text"/>
        </FrameLayout>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardPreventCornerOverlap="true">

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/colorRippleGray">

            <com.nectarbits.baraati.View.TextViewTitle
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/tvt_plus"
                android:padding="@dimen/_7sdp"
                android:text="+"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/large_Fonts" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
