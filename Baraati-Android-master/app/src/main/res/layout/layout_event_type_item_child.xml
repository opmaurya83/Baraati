<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_marginBottom="0.5dp"
            app:cardPreventCornerOverlap="true">


            <TableRow

                android:id="@+id/tblRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/category_item_selector">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <com.github.siyamed.shapeimageview.CircularImageView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/img"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/icon_dem"
                        app:siBorderColor="@color/colorImageBorder"
                        app:siBorderWidth="2dp" />
                    <View
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorHintGray"></View>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.nectarbits.baraati.View.TextViewTitle

                            android:id="@+id/checkboxTextview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:text="Hindu"
                            android:textColor="@color/colorTitle"
                            android:textSize="@dimen/medium_Fonts" />

                    </LinearLayout>


                    <CheckBox
                        android:visibility="gone"
                        android:id="@+id/checkbox"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_gravity="center_vertical"
                        android:button="@drawable/selector_checked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </TableRow>
        </android.support.v7.widget.CardView>


</LinearLayout>