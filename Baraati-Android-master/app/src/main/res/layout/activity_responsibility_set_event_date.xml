                            android:textColor="@color/colorWhite"
                            android:text="@string/reject"
                            android:textSize="@dimen/medium_Fonts_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>

        </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view" />

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_7sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardBackgroundColor="@color/chat_header_date_background"
        android:layout_gravity="bottom"
        app:cardElevation="0dp"

        app:cardPreventCornerOverlap="true">
        <com.nectarbits.baraati.View.TextViewDescription
            android:id="@+id/tv_instructions"
            android:padding="@dimen/_5sdp"
            android:visibility="visible"

            android:gravity="left|bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/now_you_can_help_to_manage_for_their_wedding_by_purchasing_product_suggest_best_vendor_for_the_particular_event"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/medium_Fonts_12" />
        </android.support.v7.widget.CardView>



</LinearLayout>
