            <TableRow
                android:id="@+id/tblRowDateRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/category_item_selector">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"

                    android:padding="@dimen/_8sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.nectarbits.baraati.View.TextViewDescription
                                    android:visibility="visible"
                                    android:id="@+id/ttv_start_date_empty"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/start_date"
                                    android:textColor="@color/colorDesciption"
                                    android:textSize="@dimen/medium_Fonts" />

                                <LinearLayout
                                    android:id="@+id/llStartDate"
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <com.nectarbits.baraati.View.TextViewTitle
                                        android:id="@+id/ttv_start_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="31"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/_37sdp" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <com.nectarbits.baraati.View.TextViewTitle
                                            android:id="@+id/ttv_start_month"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Dec"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_15sdp" />

                                        <com.nectarbits.baraati.View.TextViewTitle
                                            android:id="@+id/ttv_start_year"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="2016"
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/small_Fonts" />
                                    </LinearLayout>
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_move" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <com.nectarbits.baraati.View.TextViewDescription
                                        android:visibility="visible"
                                        android:id="@+id/ttv_end_date_empty"
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/end_date"
                                        android:textColor="@color/colorDesciption"
                                        android:textSize="@dimen/medium_Fonts" />

                                    <LinearLayout
                                        android:id="@+id/llEndDate"
                                        android:visibility="gone"
                                        android:layout_width="match_parent"

                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <com.nectarbits.baraati.View.TextViewTitle
                                            android:id="@+id/ttv_end_date"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="31"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="@dimen/_37sdp" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <com.nectarbits.baraati.View.TextViewTitle
                                                android:id="@+id/ttv_end_month"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Dec"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_15sdp" />

                                            <com.nectarbits.baraati.View.TextViewTitle
                                                android:id="@+id/ttv_end_year"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="2016"
                                                android:textColor="@color/gray"
                                                android:textSize="@dimen/small_Fonts" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:background="@drawable/down_arrow"
                            android:visibility="gone" />
                    </LinearLayout>


                </LinearLayout>
            </TableRow>
      <!--  </com.balysv.materialripple.MaterialRippleLayout>-->
    </android.support.v7.widget.CardView>

