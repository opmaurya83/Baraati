    <android.support.v7.widget.CardView
        android:id="@+id/cv_accept_reject_status"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_7sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true">
        <LinearLayout
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.nectarbits.baraati.View.TextViewTitle
                android:id="@+id/tvt_accept_or_reject"
                android:textColor="@color/colorDesciption"
                android:text="@string/accept"

                android:textSize="@dimen/medium_Fonts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_accept_reject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_7sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true">
        <LinearLayout
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/green"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="@dimen/_4sdp"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content">
            <com.balysv.materialripple.MaterialRippleLayout
                app:mrl_rippleColor="@color/colorWhite"
                app:mrl_rippleAlpha="0.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ll_accept"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.nectarbits.baraati.View.TextViewTitle
                        android:id="@+id/tvt_accept"
                        android:textColor="@color/colorWhite"
                        android:text="@string/accept"
                        android:textSize="@dimen/medium_Fonts_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
</android.support.v7.widget.CardView>
           <View
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="0dp"/>
            <android.support.v7.widget.CardView

                app:cardBackgroundColor="@color/red"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="@dimen/_4sdp"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content">
                <com.balysv.materialripple.MaterialRippleLayout
                    app:mrl_rippleColor="@color/colorWhite"
                    app:mrl_rippleAlpha="0.2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_reject"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.nectarbits.baraati.View.TextViewTitle
